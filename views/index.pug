html
	head
		title Todo
		link(rel="stylesheet",href="css/style.css")
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" integrity="sha512-EZLkOqwILORob+p0BXZc+Vm3RgJBOe1Iq/0fiI7r/wJgzOFZMlsqTa29UEl6v6U6gsV4uIpsNZoV32YZqrCRCQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	body
		.container
			//- todo list : items from express_pug
			each val in items 
				form.row(action="/delete",method="POST")
					input(type="checkbox",name="checkbox",value=val._id,onchange="this.form.submit()")
					.item.u-full-width= val.name
			//- form
			.row
				six.columns
					form(action="/",method="POST")
						input(type="text",name="item",placeholder="item",class="u-full-width",autofocus)
						button.button.button-primary(type="submit") SUBMIT

			